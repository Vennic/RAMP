<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageButton
            android:text=""
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/reload_button"
            android:background="@drawable/ic_try_again"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_refresh_white_24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cannot_load_text"/>

    <TextView
            android:text="Cannot load playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cannot_load_text"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/upset_smile_image"
            android:textSize="18sp"
            android:textStyle="bold"/>

    <ImageView
            android:layout_width="144dp"
            android:layout_height="144dp"
            app:srcCompat="@drawable/ic_upset_smile"
            android:id="@+id/upset_smile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp"/>


</android.support.constraint.ConstraintLayout>