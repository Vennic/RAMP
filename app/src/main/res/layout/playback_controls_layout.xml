<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="updateMessage"
                  type="com.kuzheevadel.vmplayerv2.common.UpdateUIMessage"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="428dp"
                app:srcCompat="@drawable/album_art_default"
                android:id="@+id/imageView2"
                android:scaleType="centerCrop"
                app:album_url="@{updateMessage.imageUri}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <SeekBar
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_seek_bar"
                android:max="@{updateMessage.durationInSeconds}"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_skip_previous_black"
                android:id="@+id/prev_track"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toStartOf="@+id/playback_play_pause_button"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/playback_play_pause_button"
                app:layout_constraintBottom_toBottomOf="@+id/playback_play_pause_button"/>

        <android.support.v7.widget.AppCompatImageButton
                android:layout_width="@dimen/playback_bottom_buttons_size"
                android:layout_height="@dimen/playback_bottom_buttons_size"
                app:srcCompat="@drawable/ic_play_to_pause"
                android:id="@+id/playback_play_pause_button"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/playback_track_name"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/loop_image_button"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_skip_next_black"
                android:id="@+id/next_track"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toEndOf="@+id/playback_play_pause_button"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/playback_play_pause_button"
                app:layout_constraintBottom_toBottomOf="@+id/playback_play_pause_button"/>
        <TextView
                tools:text="Mann gegen mann"
                android:text="@{updateMessage.title}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playback_track_name"
                app:layout_constraintTop_toBottomOf="@+id/playback_artist_name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                tools:text="Rammstein"
                android:text="@{updateMessage.artist}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playback_artist_name"
                app:layout_constraintTop_toBottomOf="@+id/progress_seek_bar" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" android:textColor="@android:color/black" android:textSize="18sp"/>
        <TextView
                tools:text="0:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_duration_text"
                app:layout_constraintStart_toStartOf="@+id/progress_seek_bar"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/progress_seek_bar"/>
        <TextView
                tools:text="3:52"
                android:text="@{updateMessage.durationType}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" app:layout_constraintEnd_toEndOf="@+id/progress_seek_bar"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/progress_seek_bar"/>

        <ImageButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_playlist_add_black_24dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/imageButton61"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"/>

        <ImageButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_shuffle_black"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/shuffle_image_button"
                app:layout_constraintStart_toEndOf="@+id/imageButton61"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/loop_image_button"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_repeat_black"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/loop_image_button"
                app:layout_constraintStart_toEndOf="@+id/shuffle_image_button"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageButton51"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_more_vert_black_24dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/imageButton51"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="32dp"/>

    </android.support.constraint.ConstraintLayout>

</layout>