<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="false">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/album_art_default"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="Rammstein - Mann Gegen Mann (Live from America)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_track_info_text"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/bottom_play_pause_image"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_play_arrow_black"
            android:id="@+id/bottom_play_pause_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/bottom_track_info_text"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_track_info_text"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="411dp"
            android:src="@drawable/album_art_default"
            android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>

    <ImageView
            android:layout_width="@dimen/playback_bottom_buttons_size"
            android:layout_height="@dimen/playback_bottom_buttons_size"
            app:srcCompat="@drawable/ic_play_arrow_black"
            android:id="@+id/imageView6"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView10"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView9"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:layout_width="@dimen/playback_bottom_buttons_size"
            android:layout_height="@dimen/playback_bottom_buttons_size"
            app:srcCompat="@drawable/ic_skip_next_black"
            android:id="@+id/imageView9"
            app:layout_constraintEnd_toStartOf="@+id/imageView12"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="@dimen/playback_bottom_buttons_size"
            android:layout_height="@dimen/playback_bottom_buttons_size"
            app:srcCompat="@drawable/ic_skip_previous_black"
            android:id="@+id/imageView10"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView11" android:layout_marginStart="16dp"/>

    <ImageView
            android:layout_width="@dimen/playback_bottom_buttons_size"
            android:layout_height="@dimen/playback_bottom_buttons_size"
            app:srcCompat="@drawable/ic_shuffle_black"
            android:id="@+id/imageView11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="@dimen/playback_bottom_buttons_size"
            android:layout_height="@dimen/playback_bottom_buttons_size"
            app:srcCompat="@drawable/ic_repeat_black"
            android:id="@+id/imageView12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>